{
    "id": "controller-pointer",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "ControllerPointerConfig",
    "description": "An instance of <a href=\"#controller-pointer\">a controller pointer.</a>",
    "type": "object",

    "properties": {
        "fullscreen":{
            "type": "boolean",
            "title": "Fullscreen",
            "description": "Does a double click/tap/touch toggle the fullscreen mode ?",
            "default": true
        },

        "orientation":{
            "$ref": "controller-options-orientation"
        },

        "zoom":{
            "$ref": "controller-options-zoom"
        }
    }
}
